<%- include header.ejs %>
<script src="/forms.js"></script>
<p><%= notice %></p>


<h1>New Plan</h1>
<!-- New plan form -->
<div class="row">
  <div class="col s12">
  	<div class="row">
  		<!-- input for plan name -->
      <div class="input-field col s12 m6">
        <input placeholder="Eg: Plan 1" id="plan_name" type="text" class="validate">
        <label for="plan_name">Plan Name</label>
      </div>	
      <div class="input-field col s12 m6">
        <input placeholder="Eg: $60,000" id="pay" type="number" class="validate">
        <label for="pay">Expected pay:</label>
      </div>
  	</div>
    <div class="row">
      	<!-- Input for salary -->
      <div class="input-field col s6">
      	<!-- Search bar for jobs -->
        <input placeholder="Eg: Microsoft" id="search" type="text" class="validate">
        <label for="search">Search for company:</label>
      </div>
      <button id="search-button" class=" s2 btn-floating btn-large waves-effect waves-light red"><i class="material-icons">search</i></button>
    </div>
  </div>
</div>

<!-- Show the results of the job search -->
<div class='row' id="results">
</div>

<!-- Submit button for form -->
<button class="btn waves-effect waves-light" id="submit">Submit
  <i class="material-icons right">send</i>
</button>




